<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shan.tech.javlib.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.shan.tech.javlib.pojo.User">
        <result column="ID" property="id" jdbcType="BIGINT"/>
        <result column="NAME" property="name" jdbcType="VARCHAR"/>
        <result column="PASSWORD" property="password" jdbcType="VARCHAR"/>
        <result column="CREATED_DATE" property="created_date" jdbcType="DATE"/>
        <result column="UPDATED_DATE" property="updated_date" jdbcType="DATE"/>
    </resultMap>
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM USER WHERE ID = #{id}
    </select>
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM USER
    </select>
</mapper>